# Admin plan sayfası smoke
GOTO /admin/login/
FILL input#id_username ${ADMIN_USER}
FILL input#id_password ${ADMIN_PASS}
CLICK input[type="submit"]
WAIT URL CONTAINS /admin/

# Hedef path'i değişkenden oku; yoksa /admin/plan/ kullan
GOTO ${PLAN_PATH:/admin/plan/}
WAIT URL CONTAINS ${PLAN_PATH:/admin/plan/}
WAIT SELECTOR body

SCREENSHOT targets/screens/admin-plan.png
