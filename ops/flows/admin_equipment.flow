# Admin > Equipment (idempotent login)

# Her koşulda önce çıkış yap (oturum varsa temizler)
GOTO /admin/logout/
WAIT URL CONTAINS /admin/

# Sonra login sayfasına git ve giriş yap
GOTO /admin/login/
WAIT SELECTOR input#id_username
FILL input#id_username admin
FILL input#id_password Admin!2345
CLICK input[type=submit]
WAIT URL CONTAINS /admin/
WAIT SELECTOR #content-main

# Yardımcı rota: admin changelist'e redirect eder (stabil)
GOTO /admin/maintenance/equipment/list/
WAIT URL CONTAINS /admin/maintenance/equipment/
WAIT SELECTOR #content-main
SCREENSHOT targets/screens/admin-equipment.png
